package com.cpa.serviceimpl;

import java.sql.SQLException;
import java.util.HashMap;

import com.cpa.entity.Customer;
import com.cpa.repository.CustRepo;
import com.cpa.service.CustService;

public class CustServiceImpl implements CustService{

	CustRepo custRepo = new CustRepo();
	@Override
	public HashMap<Integer, Customer> initializeHashmap() {
		// TODO Auto-generated method stub
		
		return null;
	}

	@Override
	public boolean checkCust(String phone) {
		// TODO Auto-generated method stub
		custRepo.isCustExist(phone);
		return false;
	}

	@Override
	public void addCust(String customer_name, String customer_address1, String customer_address2, String customer_city, String customer_phone) throws SQLException {
		// TODO Auto-generated method stub
		custRepo.insertCustomer(customer_name,customer_address1,customer_address2,customer_city,customer_phone);
		
	}

	@Override
	public Customer getCustomerById(String acc_no) {
		// TODO Auto-generated method stub
		custRepo.getCustomer(acc_no);
		return custRepo.getCustomer(acc_no);
	}

}
